{
    "name": "AI Phishing Detection Tool",
    "description": "AI Phishing Detection Tool Chrome Extension",
    "version": "1.0",
    "manifest_version": 3,
    "host_permissions": ["<all_urls>"],
    "permissions": ["scripting", "activeTab", "storage"],
    "options_ui": {
        "page": "options.html", 
        "open_in_tab": false
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "fish.png"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["detector.js"],
            "run_at": "document_end"
        }
    ]
}
